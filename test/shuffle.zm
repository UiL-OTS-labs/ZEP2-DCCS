// Shuffles test_items table (no restrictions on item order).
int shuffle_prac_items()
{
    prac_items.shuffle(0, -1);

    return OK;
}

int shuffle_preswitch_items()
{
    preswitch_items.shuffle(0, -1);

    return OK;
}

int shuffle_postswitch_items()
{
    postswitch_items.shuffle(0, -1);

    return OK;
}

